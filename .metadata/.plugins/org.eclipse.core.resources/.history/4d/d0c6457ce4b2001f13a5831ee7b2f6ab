<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>스프링 MVC 게시판 글수정</title>
	<script src="https://code.jquery.com/jquery-latest.min.js"></script>
	<script>
	 function gongji_check(){
		 if($.trim($('#gname').val()) == ''){
			 alert('공지 작성자를 입력하세요!');
			 $('#gname').val('').focus();
			 return false;
		 }
		 if($.trim($('#gtitle').val()) == ''){
			 alert('공지 제목을 입력하세요!');
			 $('#gtitle').val('').focus();
			 return false;
		 }
		 if($.trim($('#gcont').val()) == ''){
			 alert('공지 내용을 입력하세요!');
			 $('#gcont').val('').focus();
			 return false;
		 }
	 }
	</script>
</head>
